<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NodeJS | Kevin Rebakure</title>
    <link rel="stylesheet" href="output.css" />
  </head>
  <body class="bg-gray-900 text-white">
    <div class="mx-auto w-[800px]">
      <%- include('partials/header.ejs') %>
      
      <main>
        <section>
          <h1 class="p-10 text-center text-4xl font-semibold">
            <%= data.present.title %>
          </h1>
          <div class="space-y-5 p-5">
            <% for (let i = 0; i < data.present.paragraphs.length; i++) { %>
              <%- `<p>${data.present.paragraphs[i]}</p>`%>
              <% } %>
          </div>
        </section>
      </main>

      <%- include('partials/footer') %>
    </div>
</html>
